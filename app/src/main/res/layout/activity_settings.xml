<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="10dp"
        android:tint="#40C4FF"
        app:layout_constraintBottom_toTopOf="@+id/settingTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        tools:layout_editor_absoluteX="167dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/titletext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="172dp"
            android:fontFamily="@font/warming_black"
            android:text="autoaid"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#77000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="252dp"
            android:layout_height="27dp"
            android:fontFamily="@font/warming_medium"
            android:text="Account"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="267dp" />

        <Switch
            android:id="@+id/notiToggle"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:fontFamily="@font/warming_semibold"
            android:text="Notifications"
            android:textSize="20sp"
            android:thumbTint="#40C4FF"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="454dp"
            tools:text="Notifications" />

        <TextView
            android:id="@+id/locationBlurb"
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:fontFamily="@font/warming_regular"
            android:text="Use your location to find autoshops near you."
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="600dp" />

        <TextView
            android:id="@+id/notiBlurb"
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:fontFamily="@font/warming_regular"
            android:text="Receive reminders for regular car maintenance."
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="496dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="252dp"
            android:layout_height="27dp"
            android:fontFamily="@font/warming_medium"
            android:text="Preferences"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="417dp" />

        <Switch
            android:id="@+id/locationToggle"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:fontFamily="@font/warming_semibold"
            android:text="Location Services"
            android:textSize="20sp"
            android:thumbTint="#40C4FF"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="559dp"
            tools:text="Location Services" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="252dp"
            android:layout_height="27dp"
            android:fontFamily="@font/warming_medium"
            android:text="About"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="694dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_semibold"
            android:text="Edit car information"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="340dp"
            tools:text="Edit car information" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_semibold"
            android:text="Edit profile"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="302dp"
            tools:text="Edit profile" />

        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_bold"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="137dp"
            tools:text="Settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>