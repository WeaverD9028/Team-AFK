<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/titletext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="172dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="172dp"
            android:fontFamily="@font/warming_black"
            android:text="autoaid"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#77000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="252dp"
            android:layout_height="27dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/warming_medium"
            android:text="Account"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settingTitle" />

        <Switch
            android:id="@+id/notiToggle"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="46dp"
            android:checked="true"
            android:fontFamily="@font/warming_semibold"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Notifications"
            android:textScaleX="1"
            android:textSize="26sp"
            android:thumbTint="#40C4FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:text="Notifications" />

        <TextView
            android:id="@+id/locationBlurb"
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="46dp"
            android:fontFamily="@font/warming_regular"
            android:text="Use your location to find autoshops near you."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationToggle" />

        <TextView
            android:id="@+id/notiBlurb"
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="46dp"
            android:fontFamily="@font/warming_regular"
            android:text="Receive reminders for regular car maintenance."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notiToggle" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="252dp"
            android:layout_height="27dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/warming_medium"
            android:text="Preferences"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/notiToggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Switch
            android:id="@+id/locationToggle"
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="46dp"
            android:fontFamily="@font/warming_semibold"
            android:text="Location Services"
            android:textSize="26sp"
            android:thumbTint="#40C4FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notiBlurb"
            tools:text="Location Services" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/warming_semibold"
            android:text="Edit car information"
            android:textColor="#40C4FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:text="Edit car information" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/warming_semibold"
            android:text="Edit profile"
            android:textAlignment="textStart"
            android:textColor="#40C4FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:text="Edit profile" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="166dp"
            android:layout_marginBottom="7dp"
            android:tint="#40C4FF"
            app:layout_constraintBottom_toTopOf="@+id/settingTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/settingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/warming_bold"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titletext3"
            tools:text="Settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>