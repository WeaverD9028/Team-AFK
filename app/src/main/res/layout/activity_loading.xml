<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loading">

  <TextView
      android:id="@+id/loadingHeader"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="19dp"
      android:fontFamily="@font/warming_black"
      android:gravity="center_horizontal"
      android:text="AUTOAID"
      android:textSize="16sp"
      android:textStyle="bold" />

  <!--load gif insertion-->
  <pl.droidsonroids.gif.GifImageView
      android:id="@+id/carLoadGif"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_centerInParent="true"
      android:src="@drawable/carload" />

  <TextView
      android:id="@+id/loadingBlurb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="200dp"
      android:fontFamily="@font/warming_medium"
      android:gravity="center_horizontal"
      android:text="Creating your diagonstic..."
      android:textSize="16sp" />

  <Button
      android:id="@+id/continueButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="99dp"
      android:layout_marginBottom="85dp"
      android:text="Continue" />


</RelativeLayout>