<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <!--text view for our car make-->

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/car2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="@font/warming_regular"
                android:paddingLeft="5dp"
                android:text="Date"
                android:textColor="@color/grey"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_medium"
            android:padding="5dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idTVTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_medium"
            android:padding="5dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/warming_regular"
                android:paddingLeft="5dp"
                android:text="Make / Model / Year"
                android:textColor="@color/grey"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVCarMake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/warming_bold"
                android:padding="5dp"
                android:text="Car Make"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idTVCarModel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/warming_bold"
                android:padding="5dp"
                android:text="Car Model"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idTVCarYear"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/warming_bold"
                android:padding="5dp"
                android:text="Car Year"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/warming_regular"
                android:paddingLeft="5dp"
                android:text="Repair"
                android:textColor="@color/grey"
                android:textSize="16sp" />

        </LinearLayout>

        <!--text view for our car model-->

        <!--text view for our car model-->

        <!--text view for our car model-->
        <TextView
            android:id="@+id/idTVCarRepair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/warming_medium"
            android:padding="5dp"
            android:text="Repair"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>