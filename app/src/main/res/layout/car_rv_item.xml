<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our car make-->
        <TextView
            android:id="@+id/idTVCarMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Car Make"
            android:textColor="@color/black" />

        <!--text view for our car model-->
        <TextView
            android:id="@+id/idTVCarModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Car Model"
            android:textColor="@color/black" />

        <!--text view for our car model-->
        <TextView
            android:id="@+id/idTVCarYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Car Year"
            android:textColor="@color/black" />

        <!--text view for our car model-->
        <TextView
            android:id="@+id/idTVCarEngine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Car Engine"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>